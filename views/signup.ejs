<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Work Zone - Signup</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="public/stylesheets/bootstrap.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="public/stylesheets/theme.css">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="public/stylesheets/font-awesome.css">

    <!-- Jquery JS -->
    <script src="public/javascripts/jquery.js" type="text/javascript"></script>

    <!-- Custom JS -->
    <script src="public/javascripts/site.js" type="text/javascript"></script>

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/public/images/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/public/images/favicon-32x32.png" sizes="32x32">

</head>

<body>

    <div class="row-fluid login">
        <div class="dialog">
            <p class="brand" href="#">Job Zone</p>
            <div class="block">
                <div class="block-header">
                    <h2>Sign Up</h2>
                </div>
                <form action="/register" method="post">
                    <label>New User:</label>
                    <label>Username</label>
                    <input id="username" name="username" placeholder="Username" type="text" class="span12" />
                    <label>Password</label>
                    <input id="password" name="password" placeholder="Password" type="password" class="span12">
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success pull-right">Sign Up</button>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="public/javascripts/bootstrap.js"></script>

</body>

</html>