<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Job Zone - Post</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Google Fonts-->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Aguafina+Script">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" type="text/css" href="public/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="public/stylesheets/font-awesome.css">

    <!--Jquery JS-->
    <script src="public/javascripts/jquery.js" type="text/javascript"></script>

    <!--Site Theme CSS and Site Custom JS-->
    <link rel="stylesheet" type="text/css" href="public/stylesheets/theme.css">
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">
    <script src="public/javascripts/site.js" type="text/javascript"></script>

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/public/images/favicon-16x16.png" sizes="16x16" >
    <link rel="icon" type="image/png" href="/public/images/favicon-32x32.png" sizes="32x32" >

</head>

<body>

    <!-- Begin Navbar-->
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav pull-right">

                <li id="fat-menu" class="dropdown">
                    <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-user"></i>
                        <%= myVar %>
                            <i class="icon-caret-down"></i>
                    </a>

                    <ul class="dropdown-menu">
                        <li>
                            <a tabindex="-1" href="/account">My Account</a>
                        </li>
                        <li class="divider"></li>
                        <li class="divider visible-phone"></li>
                        <li>
                            <a tabindex="-1" href="/logout">Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <a>
                <img src="/public/images/logo.png" id="logo-pages" style="width:5%" />
            </a>
        </div>
    </div>
    <!-- End Navbar-->

    <!-- Begin SideBar -->
    <div id="sidebar-nav">
        <ul id="dashboard-menu" class="nav nav-list">
            <li class="">
                <a href="/home">
                    <i class="icon-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class=" ">
                <a href="/search">
                    <i class="icon-search"></i>
                    <span>Search Jobs</span>
                </a>
            </li>
            <li class="active  ">
                <a href="/createPost">
                    <i class="icon-bar-chart"></i>
                    <span>Create Post</span>
                </a>
            </li>
        </ul>
    </div>
    <!-- End Sidebar-->

    <div class="row-fluid login">
        <div class="dialog" style="font-family: 'Cairo', sans-serif; font-size: 20px;">
            <div class="block-header">
                <h2 id="post">Create a Job Post</h2>
            </div>

            <form action="/createPost" method="post" id="jobPost">
                <div class="controls">
                    <label>Job Title</label>
                    <input id="title" name="title" placeholder="" type="text" class="span12" />

                    <label>Description</label>
                    <input id="description" name="description" placeholder="" type="text" class="span12" />

                    <label>Contact Info</label>
                    <input id="contact_info" name="contact_info" placeholder="" type="text" class="span12" />

                    <div class="form-actions">
                        <button id="btnPass" type="submit" id="submit_post">Submit Job</button>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    

    <footer class="navbar-fixed-bottom" style="text-align:center; padding:1%; background-color:#dddde2; border-top: 5px solid #43a047;">
            <div class="container1">
                <div class="row">
                    <div>
                        <div class="col-md-12 text-center" >
                            <a style="color:#777777"><h5>Powered by Codeaholics</h5></a>
                        </div>
                    </div>
                </div>
            </div>
    </footer>

    <script src="public/javascripts/bootstrap.js"></script>

</body>

</html>